// " ############################################
// " ###       THIS CONFIG IS SYMLINKED       ###
// " ###    DONT' ENTER ANY SENSITIVE INFO    ###
// " ###                                      ###
// " ###  USE LOCAL CONFIG FOR MODIFICATIONS  ###
// " ### UNLESS CHANGES WILL BECOME PERMANENT ###
// " ############################################
{
  "diagnostic.errorSign": "",
  "diagnostic.warningSign": "",
  "diagnostic.infoSign": "",
  "diagnostic.hintSign": "",
  "list.nextKeymap": "<C-n>",
  "list.previousKeymap": "<C-k>",
  "coc.preferences.formatOnSaveFiletypes": [
    "yaml",
    "json",
    "python"
  ],
  // ========= COC PYTHON CONFIG =========
  // These have to be inline with 'g:python3_host_prog'
  "python.jediPath": "~/.pyenv/versions/3.7.6/lib/python3.7/site-packages",
  "python.linting.pylintPath": "~/.pyenv/versions/3.7.6/bin/pylint",
  "python.linting.flake8Path": "~/.pyenv/versions/3.7.6/bin/flake8",
  "python.linting.mypyPath": "~/.pyenv/versions/3.7.6/bin/mypy",
  "python.formatting.autopep8Path": "~/.pyenv/versions/3.7.6/bin/autopep8",
  "python.formatting.blackPath": "~/.pyenv/versions/3.7.6/bin/black",
  "python.formatting.yapfPath": "~/.pyenv/versions/3.7.6/bin/yapf",
  // Overall settings
  "python.linting.enabled": true,
  "python.linting.pylintEnabled": true,
  "python.linting.pylintUseMinimalCheckers": false,
  // List of human readable pylint messages https://github.com/janjur/readable-pylint-messages/blob/master/README.md
  "python.linting.pylintArgs": [
    "--enable=C,R,W,E,F",
    "--disable=missing-docstring",
    "--disable=empty-docstring",
    "--disable=line-too-long",
    "--disable=too-many-lines"
  ],
  "python.formatting.provider": "autopep8",
  "python.formatting.autopep8Args": [
    "--max-line-length=99999"
  ],
  // ========= COC SNIPPETS CONFIG =========
  "snippets.ultisnips.directories": [
    "UltiSnips",
    // Snippets from vim-go
    "gosnippets/UltiSnips",
    // Custom snippets
    "~/.config/ultisnips"
  ],
  // ========= COC TEXLAB CONFIG =========
  "latex.forwardSearch.executable": "/Applications/Skim.app/Contents/SharedSupport/displayline",
  "latex.forwardSearch.args": [
    "%l",
    "%p",
    "%f"
  ],
  "latex.lint.onSave": true,
  "latex.lint.onChange": false,
  // ========= COC SPELLING CONFIG =========
  "cSpell.language": "en-GB",
  "cSpell.enabledLanguageIds": [
    "csharp",
    "go",
    "javascript",
    "javascriptreact",
    "tex",
    "latex",
    "markdown",
    "php",
    "plaintext",
    "typescript",
    "typescriptreact",
    "yml"
  ],
  "cSpell.dictionaryDefinitions": [
    // Unfortunately, this has to use a global path. So will need to have separate
    // definitions for different VMs...
    {
      "name": "ik1614-main-en-GB",
      "path": "/Users/ilya/.config/dictionaries-ik1614/main-en-GB.txt"
    }
  ],
  // List of dictionaries to use when checking files
  "cSpell.dictionaries": [
    "ik1614-main-en-GB"
  ]
}
