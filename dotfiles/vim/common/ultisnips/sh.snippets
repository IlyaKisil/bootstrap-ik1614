snippet parseargs "Parse key word arguments" b
for arg in "$@"; do
  case "$arg" in
    -h|--help)
      __show_help
      exit
      ;;
    --${1:option}=*)
      $1="\$\{arg#*=\}"
      ;;
    *)
      # Skip unknown option
      ;;
  esac
  shift
done
endsnippet

